-- programs ------------------------------------------------

entrypoints Program ;

Prog.   	Program ::= [TopDef] ;

FnDef.	   	TopDef ::= Type Ident "(" [Arg] ")" Block ;

ClsDef. 	TopDef ::= "class" Ident "{" [ClsElems] "}" ;

ExtClsDef.	TopDef ::= "class" Ident "extends" Ident "{" [ClsElems] "}" ;

separator nonempty TopDef "" ;

Ar. 	   Arg ::= Type Ident;

separator  Arg "," ;


-- Class elements ------------------------------------------

ClsMethod.	ClsElems ::= Type Ident "(" [Arg] ")" Block ;

ClsField. 	ClsElems ::= Type Ident ";" ;

separator	ClsElems "" ;

-- statements ----------------------------------------------

Blk.       Block ::= "{" [Stmt] "}" ;

separator  Stmt "" ;

Empty.     Stmt ::= ";" ;

BStmt.     Stmt ::= Block ;

Decl.      Stmt ::= Type [Item] ";" ;

NoInit.    Item ::= Ident ; 

Init.      Item ::= Ident "=" Expr ;

separator nonempty Item "," ;

Ass.       Stmt ::= Ident "=" Expr  ";" ;

Incr.      Stmt ::= Ident "++"  ";" ;

Decr.      Stmt ::= Ident "--"  ";" ;

Ret.       Stmt ::= "return" Expr ";" ;

VRet.      Stmt ::= "return" ";" ;

Cond.      Stmt ::= "if" "(" Expr ")" Stmt  ;

CondElse.  Stmt ::= "if" "(" Expr ")" Stmt "else" Stmt  ;

While.     Stmt ::= "while" "(" Expr ")" Stmt ;

For. 	   Stmt ::= "for" "(" Type Ident ":" Ident ")" Stmt ;

SExp.      Stmt ::= Expr  ";" ;

-- Types ---------------------------------------------------

Int.       BasicType ::= "int" ;

Str.       BasicType ::= "string" ;

Bool.      BasicType ::= "boolean" ;

Void.      BasicType ::= "void" ;

internal   Fun. BasicType ::= Type "(" [Type] ")" ;



BType. 		TypeName ::= BasicType ;

ClsType.	TypeName ::= Ident ;


ArrayType. 	Type ::= TypeName "[]" ;

NormalType.	Type ::= TypeName ;

-- ToDO: clsType

-- TODO: Arrays

separator  Type "," ;

-- Expressions ---------------------------------------------


